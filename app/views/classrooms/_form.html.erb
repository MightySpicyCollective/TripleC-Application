<div class="col-md-6 col-md-offset-3">
  <%= form_for @classroom, class: 'form-horizontal' do |f| %>
    <div class="row">
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control input-sm', placeholder: 'Name' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control input-sm', placeholder: 'Description', rows: 10, cols: 50 %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= f.label :photo, "Upload a pic", class: 'col-sm-3' %>
        <%= f.file_field :photo, class: 'form-group'%>
      </div>
    </div>

    <div class="text-center row padding-bottom-20">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
