<div class="sign-up">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="col-md-12">
        <%= form_for @comment, url: [@project, @comment], remote: true do |f| %>
          <div class="col-md-12">
            <div class="row">
              <div class="form-group">
                <%= f.text_area :content, class: "form-control comment-content", placeholder: "Comment" %>
                <span class="error"></span>
              </div>
            </div>
            <div class="text-center row padding-bottom-20">
              <%= f.submit "Add Comment", class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'comments/form' %>
