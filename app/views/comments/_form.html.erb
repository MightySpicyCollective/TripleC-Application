<div class="container padding-top-100 padding-bottom-100 sign-up">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="col-md-12">
        <%= render 'layouts/logo_header' %>

        <%= form_for @comment, url: [@project, @comment] do |f| %>
          <div class="col-md-12">
            <div class="row">
              <div class="form-group">
                <%= f.text_area :content, class: "form-control input-sm", placeholder: "Comment" %>
              </div>
            </div>
            <div class="text-center row padding-bottom-20">
              <%= f.submit "Add Comment", class: 'btn btn-primary' %>
            </div>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
