<%= image_tag @user.avatar.url(:thumb) %>

<strong><%= @user.username %></strong>

<%= @user.description %>

<br />
<%= @user.school.name %> | <%= @user.classroom.name %>

<% unless @projects.blank? %>
  <h3>Projects</h3>
  <table>
    <thead>
      <th>Name</th>
      <th>School/Classroom/Teacher</th>
      <th>Description</th>
      <th>Status</th>
      <th>Created By</th>
      <th>Actions</th>
    </thead>
    <% @projects.each do |project| %>
      <% project = ProjectPresenter.new(project) %>
      <tr>
        <td><%= link_to project.name, view_project_path(project) %></td>
        <td>
          <%= link_to project.school.name, school_path(project.school) %>/
          <%= link_to project.classroom.name, classroom_path(project.classroom) %>/
          <%= link_to project.classroom.teacher.try(:username), user_path(project.classroom.teacher) %>
        </td>
        <td><%= project.description %></td>
        <td><%= project.status %></td>
        <td><%= project.username %></td>
        <td>
          <%= link_to 'View', view_project_path(project) %>
          <% if project.sharable?(current_user) %>
            <%= link_to 'Share', share_project_path(project), method: :post %>
          <% end %>
          <% if project.forked? %>
            <%= link_to 'Compare with original', compare_project_path(project) %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= paginate @projects %>

