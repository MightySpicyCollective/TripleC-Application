<%= stylesheet_link_tag 'projects' %>
<%= stylesheet_link_tag 'classroom' %>

<h1>Search Results</h1>

<h4>Classrooms</h4>
<div class="project-list">
  <ul>
    <% @classrooms.each do |classroom| %>
      <% classroom = ClassroomPresenter.new(classroom) %>
      <li>
        <div class="col-md-2 col-sm-2 col-xs-2">
          <%= image_tag classroom.school_logo, class: 'img-responsive center-block' %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6 padding-right-0 padding-left-0">
          <h3><%= link_to classroom.name, classroom_path(classroom) %></h3>
          <p><%= classroom.description %></p>
        </div>
        <div class="col-md-4 padding-left-0 padding-right-0 classroom-right-col">
          <div class="col-md-12">
            <div class="col-md-12 padding-bottom-30">
              <div class="heading">School</div>
              <%= link_to classroom.school.name, school_path(classroom.school), class: 'scrap-links' %>
            </div>
            <div class="col-md-12 padding-bottom-30">
              <div class="heading">Location</div>
              <%= link_to classroom.school.location, '#', class: 'scrap-links' %>
            </div>
            <% if classroom.teacher %>
              <div class="col-md-12 padding-bottom-30">
                <div class="heading">Teacher</div>
                <%= link_to classroom.teacher.name, user_path(classroom.teacher), class: 'scrap-links' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="clearfix"> </div>
      </li>
    <% end %>
  </ul>
</div>

<h4>Projects</h4>
<div class="project-list padding-right-0">
  <ul>
    <% @projects.each do |project| %>
      <li>
        <div class="col-md-2 col-sm-2 col-xs-2">
          <%= image_tag project.user.avatar.url(:medium), class: 'img-responsive center-block' %>
        </div>
        <div class="col-md-6 col-sm-6 col-xs-6 padding-right-0 padding-left-0">
          <h3><%= link_to project.name, view_project_path(project) %></h3>
          <p><%= project.description %></p>
        </div>
        <div class="col-md-4 padding-left-0 padding-right-0 classroom-right-col">
          <div class="col-md-12">
            <div class="col-md-12 padding-bottom-30">
              <div class="heading">School</div>
              <%= link_to project.school.name, school_path(project.school), class: 'scrap-links' %>
            </div>
            <div class="col-md-12 padding-bottom-30">
              <div class="heading">Location</div>
              <%= link_to project.school.location, '#', class: 'scrap-links' %>
            </div>
            <% if project.teacher %>
              <div class="col-md-12 padding-bottom-30">
                <div class="heading">Teacher</div>
                <%= link_to project.teacher.name, user_path(project.classroom.teacher), class: 'scrap-links' %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="clearfix"> </div>
      </li>
    <% end %>
  </ul>
</div>

<h4>Users</h4>
<div class="class-room-listing">
  <ul>
    <% @users.each do |user| %>
      <li>
        <div class="col-md-2 col-sm-2 col-xs-2">
          <%= image_tag user.avatar.url(:medium), class: "img-responsive center-block" %>
        </div>
        <div class="col-md-10 col-sm-10 col-xs-10">
          <h3><%= link_to user.name, user_path(user) %></h3>
          <p><%= user.description %></p>
          <div>
            <a href="#" title="Project One" class="scrap-links">bdd</a>
          </div>
        </div>
        <div class="clearfix"></div>
      </li>
    <% end %>
  </ul>
</div>
