<h3>Project History </h3>

<table>
  <thead>
    <th>Changed By</th>
    <th>Classroom</th>
    <th>School</th>
    <th>Changed on</th>
  </thead>
  <tbody>
    <tr>
      <td><%= change_performer(@versions.first) %></td>
      <td><%= performer_user(@versions.first).classroom.name %></td>
      <td><%= performer_user(@versions.first).school.name %></td>
      <td><%= @versions.first.created_at.to_date.to_s(:long) %></td>
    </tr>
  </tbody>
</table>


<table>
  <thead>
    <tr>
      <th colspan=1></th>
      <th>Field</th>
      <th>Old</th>
      <th>New</th>
    </tr>
  </thead>
  <tbody>
    <% @versions.each do |v| %>
      <% changes = describe_changeset(v.changeset) %>
      <% s = changes.size %>
      <tr>
        <td rowspan="<%= s %>">
          <%= v.event.titleize %> (<%= v.created_at %>)
        </td>
        <% n = changes.shift %>
        <td><b><%= n[0].titleize if n %></b></td>
        <td><%= render_value(n, n[1]) if n %></td>
        <td><%= render_value(n, n[2]) if n %></td>
      </tr>
      <% changes.each do |n| %>
        <tr>
          <td><b><%= n[0].titleize if n %></b></td>
          <td><%= render_value(n, n[1]) if n %></td>
          <td><%= render_value(n, n[2]) if n %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%= paginate @versions %>
