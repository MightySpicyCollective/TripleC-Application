<div class="col-md-6 col-md-offset-3">
  <%= form_for @project, url: [current_user, @project] do |f| %>
    <div class="row">
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control input-sm', placeholder: 'Name' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control input-sm', placeholder: 'Description' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <%= f.select :status, Project::STATUSES.collect{|k,v| [k.to_s.titleize,v]}, { include_blank: 'Select Status' }, { class: 'form-control input-sm' } %>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <%= f.text_area :source_code, class: 'form-control input-sm min-height-180', placeholder: 'Description' %>
      </div>
    </div>

    <div class="text-center row padding-bottom-20">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
