<%= form_for @project, url: [current_user, @project] do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Project::STATUSES.collect{|k,v| [k.to_s.titleize,v]}, include_blank: 'Select Status' %>
  </div>

  <%= f.submit %>
<% end %>
