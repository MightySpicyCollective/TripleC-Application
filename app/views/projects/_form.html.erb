<div class="col-md-6 col-md-offset-3">
  <%= form_for @project, url: [current_user, @project], class: 'form-horizontal' do |f| %>
    <div class="row">
      <div class="form-group">
        <%= f.text_field :name, class: 'form-control input-sm', placeholder: 'What do you want to call your project?' %>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <%= f.text_area :description, class: 'form-control input-sm', placeholder: 'Describe your project', rows: 10, cols: 50 %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= f.text_area :source_code, class: 'form-control input-sm', placeholder: 'Source Code', rows: 10, cols: 50 %>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= f.label :photo, "Upload a pic", class: 'col-sm-3' %>
        <%= f.file_field :photo, class: 'form-group'%>
      </div>
    </div>

    <div class="row">
      <div class="form-group">
        <%= f.label :status, 'Is it viewable by others?', class: 'col-sm-3' %>

        <div class="col-sm-4">
          <%= f.radio_button :status, 1, class: 'col-sm-4', checked: @project.status.present? || @project.new_record? %>
          <%= f.label :status, bool_value("1"), value: 1 %>
        </div>

        <div class="col-sm-4">
          <%= f.radio_button :status, 0, class: 'col-sm-4' %>
          <%= f.label :status, bool_value("0"), value: 0 %>
        </div>
      </div>
    </div>

    <div class="text-center row padding-bottom-20">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>

<%= javascript_include_tag 'projects/form'%>
