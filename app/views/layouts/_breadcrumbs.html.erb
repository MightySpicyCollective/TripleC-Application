<!-- Bread crumb  -->

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <ol class="breadcrumb">
        <% breadcrumbs.each do |breadcrumb| %>
          <%= content_tag(:li, class: (breadcrumbs.last.eql?(breadcrumb) ? 'active' : '')) do %>
            <%= link_to '#' do %>
              <%= breadcrumb.titleize %>
            <% end %>
          <% end %>
        <% end %>
      </ol>
    </div>
  </div>
</div>

<!-- Bread crumb end -->
