<div class="container padding-top-100 padding-bottom-100 sign-up">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 reset-pass">
      <div class="col-md-12">
        <%= render 'layouts/logo_header' %>
        <div class="col-md-12">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name)) do |f| %>
            <div class="col-md-12 text-center">
              <h1>Forgot password?</h1>
            </div>
            <div class="row">
              <div class="form-group">
                <%= f.text_field :email_or_username, class: "form-control input-sm", placeholder: "Email or Username" %>
              </div>
              <div class="text-center row padding-bottom-20">
                <%= f.submit "Send me instructions", class: 'btn btn-primary' %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

